---
  const { title, subtitle } = Astro.props;
---

<div class="title">
  <h3 class="title__subtitle">
    {subtitle}
  </h3>
  <h2 class="title__title">
    {title}
  </h2>
  <svg class="title__line" width="84" height="2" viewBox="0 0 84 2" fill="none" xmlns="http://www.w3.org/2000/svg">
    <path d="M0 1H84" stroke="#07074B" stroke-opacity="0.2"/>
  </svg>
</div>

<style lang="sass">
.title 
  text-align: center
  margin-bottom: 43px
  margin-top: 120px
  &__line 
    padding: 0
    margin: 0
    display: inline-flex
  &__title
    font-family: 'Roboto'
    font-style: normal
    font-weight: 400
    font-size: 32px
    line-height: 38px
    text-transform: uppercase
    margin: 0
    margin-bottom: 5px
    color: #07074B
    @media only screen and (max-width : 768px)
      font-weight: 400
      font-size: 24px
      line-height: 28px
  &__subtitle
    margin: 0
    margin-bottom: 5px
    font-style: normal
    font-weight: 400
    font-size: 20px
    line-height: 24px
    letter-spacing: 0.14em
    text-transform: uppercase
    color: rgba(7, 7, 75, 0.6)
    @media only screen and (max-width : 768px)
      font-size: 16px
      line-height: 19px
</style>
  